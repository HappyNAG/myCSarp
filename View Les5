using System;

namespace MyFourProjekt
{
    public class View
    {
        public void Pause()
        {
            Console.ReadKey();
        }

        public void Print(object value, bool isNewLine = true)
        {
            if (isNewLine)
            {
                Console.WriteLine(value);
            }
            else
            {
                Console.Write(value);
            }
        }
    }
}