using MyFourProjekt;
using System;

class Task1
{
    //Создать программу, которая будет проверять корректность ввода логина.
    //Корректным логином будет строка от 2 до 10 символов, содержащая только буквы латинского алфавита или цифры, при этом цифра не может быть первой:
    //а) без использования регулярных выражений;
    //б) с использованием регулярных выражений.

    private View view = new View();
    public void Main()
    {
        string source;
        view.Print("Введите логин, от 2 до 10 символов. Цифра не может быть первой.");
        source = Console.ReadLine();
        // Проверка на длину
        if (source.Length < 2 || source.Length > 10)
        {
            view.Print("Логин некорректный");
        }
        // Проверка первого символа на цифру
        else if (Char.IsDigit(source[0]))
        {
            view.Print("Логин некорректный, не должна быть первая цифра!");
        }
        else
        {
            view.Print("Логин " + source + " корректный");
        }
        view.Pause();
    }
}